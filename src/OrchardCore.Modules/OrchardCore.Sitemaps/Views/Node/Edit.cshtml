@model SitemapNodeEditViewModel

<h1>@RenderTitleSegments(T["Edit Node"])</h1>

<div asp-validation-summary="All"></div>
<form asp-action="Edit" method="post">
    @await DisplayAsync(Model.Editor.Content)

    <input type="hidden" asp-for="SitemapSetId" />
    <input type="hidden" asp-for="SitemapNodeId" />
    <input type="hidden" asp-for="SitemapNodeType" />

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Save"]</button>

            <a asp-action="Delete"
               asp-controller="Node"
               asp-route-id="@Model.SitemapSetId"
               asp-route-sitemapNodeId="@Model.SitemapNodeId"
               class="btn btn-danger"
               itemprop="RemoveUrl UnsafeUrl">@T["Delete"]</a>

            <a class="btn btn-secondary"
               asp-route-action="List"
               asp-route-id="@Model.SitemapSetId">@T["Cancel"]</a>

        </div>
    </fieldset>
</form>
