@model SitemapNodeEditViewModel

<h1>@RenderTitleSegments(T["Create Node"])</h1>

<div asp-validation-summary="All"></div>
<form asp-action="Create" method="post">
    @await DisplayAsync(Model.Editor.Content)

    <input type="hidden" asp-for="SitemapSetId" />
    <input type="hidden" asp-for="SitemapNodeId" />
    <input type="hidden" asp-for="SitemapNodeType" />

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Create"]</button>
            <a class="btn btn-secondary"
               asp-route-controller="Node"
               asp-route-action="List"
               asp-route-id="@Model.SitemapSetId">@T["Cancel"]</a>
        </div>
    </fieldset>
</form>
