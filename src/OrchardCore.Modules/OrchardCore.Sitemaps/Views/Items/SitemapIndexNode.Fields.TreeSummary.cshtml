@model ShapeViewModel<SitemapIndexNode>

<div class="@(Model.Value.Enabled ? "" : "disabled")">
    @{
        var path = Model.Value.SitemapSet.RootPath + Model.Value.Path;
    }
    <span>@Model.Value.Description <code>@path</code> <span class="text-muted">- @T["Sitemap Index"]</span></span>
</div>