@model SitemapPartViewModel
<fieldset class="form-group">
    <div class="row">
        <div class="col-12 col-lg-3">
            <div class="form-group custom-control custom-checkbox">
                <input asp-for="OverrideSitemapSetConfig" class="custom-control-input" id="SitemapPart_OverrideSitemapSetConfig" />
                <label asp-for="OverrideSitemapSetConfig" class="custom-control-label">@T["Sitemap"]</label>
                <span class="hint">@T["Check to override sitemap set configuration."]</span>
            </div>
        </div>
        <div class="col-12 col-lg-3">
            <div class="form-group custom-control custom-checkbox sitemap-form-group" style="@(Model.OverrideSitemapSetConfig ? "" : "display: none")">
                <input asp-for="Exclude" class="custom-control-input" />
                <label asp-for="Exclude" class="custom-control-label">@T["Exclude"]</label>
                <span class="hint">@T["Check to exclude this content item from the site map."]</span>
            </div>
        </div>
        <div class="col-12 col-lg-3">
            <div class="form-group sitemap-form-group" asp-validation-class-for="ChangeFrequency" style="@(Model.OverrideSitemapSetConfig ? "" : "display: none")">
                <label asp-for="ChangeFrequency">@T["Change Frequency"] </label>
                <select asp-for="ChangeFrequency" class="form-control" asp-items="Html.GetEnumSelectList<ChangeFrequency>()"></select>
                <span class="hint">@T["The frequency this content item is likely to change."]</span>
            </div>
        </div>
        <div class="col-12 col-lg-3">
            <div class="form-group sitemap-form-group" asp-validation-class-for="Priority" style="@(Model.OverrideSitemapSetConfig ? "" : "display: none")">
                <label asp-for="Priority">@T["Priority"] </label>
                <select asp-for="Priority" class="form-control">
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1.0">1.0</option>
                </select>
                <span class="hint">@T["The default priority of these content types relative to other content on your site."]</span>
            </div>
        </div>

    </div>




