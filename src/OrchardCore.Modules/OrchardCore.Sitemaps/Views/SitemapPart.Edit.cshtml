</fieldset>

<script at="Foot" depends-on="jquery">
    $('#SitemapPart_OverrideSitemapSetConfig').change(function (e) {
        var checked = $(e.target).prop('checked');
        console.log(checked);
        $('.sitemap-form-group').each(function () {
            checked ? $(this).show() : $(this).hide();
        });
    });
</script>